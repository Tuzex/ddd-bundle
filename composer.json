{
  "name": "tuzex/domain-bundle",
  "description": "...",
  "type": "symfony-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Edo Barnas",
      "email": "iam@edobarnas.com"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Tuzex\\Bundle\\Ddd\\": "src/"
    }
  },
  "require": {
    "php": "^7.4",
    "symfony/framework-bundle": "4.3.*|4.4.*|5.*",
    "tuzex/ddd": "1.0.*"
  },
  "require-dev": {
    "phpstan/phpstan": "0.12.*",
    "symplify/easy-coding-standard": "7.3.*"
  },
  "scripts": {
    "check:composer": "@composer validate --no-check-all --strict",
    "check": [
      "@check:composer"
    ],
    "test:static": "phpstan analyse src -l max -c phpstan.neon",
    "test": [
      "@test:static"
    ],
    "cs": [
      "ecs check src --config easy-coding-standard.yml"
    ],
    "cs:fix": [
      "ecs check src --config easy-coding-standard.yml --fix",
      "@cs"
    ]
  },
  "scripts-descriptions": {
    "check:composer": "Validate the composer.json file.",
    "test:static": "Run the static analysis of codes.",
    "cs": "Run coding standards checkers.",
    "cs:fix": "Fix-ups the code in accordance with our coding standards."
  }
}
